generator client {
  provider = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id           String   @id @default(uuid())
  senderId     String
  recipientId  String
  message      String
  timestamp    DateTime @default(now())

  @@index([senderId, recipientId])
}
