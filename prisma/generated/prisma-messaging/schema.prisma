generator client {

  provider = "prisma-client-js"
  output   = "../generated/prisma-messaging"

}

datasource db {
  provider = "postgresql"

  url      = env("DATABASE_MESSAGING_URL")

}

model Message {
  id          String   @id @default(uuid())
  senderId    String
  recipientId String
  message     String
  timestamp   DateTime @default(now())

  @@index([senderId, recipientId])
}
